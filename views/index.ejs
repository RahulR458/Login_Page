            <!-- form handling -->
            <form action="/user-table" method="POST">
                
            <table id="myTable" class="table">
                <thead class="thead-dark">
                    <tr>
                       <th>ID</th>
                       <th>Name</th>
                       <th>@gmail</th>
                       <th>Gender</th>
                       <th>Status</th>
                       <th>Action</th> 
                    </tr>
                </thead>
                <tbody >
                    <%-include('include/_show')%>
                </tbody>
            </table>
            </form>
        </div>
